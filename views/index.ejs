    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <style>
        hr {
            background-color: black;

        }

        .jumbotron {
            background-color: #8EC5FC;
            background-image: linear-gradient(62deg, rgb(255, 161, 208) 0%, rgb(48, 209, 250) 100%);


        }

        h5 {
            display: inline;
        }

        footer {
  text-align: center;
  padding: 90px;
  background-color: DarkSalmon;
  color: white;
}
    </style>
</head>

<body>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4"> üë®üèª‚Äçüíº Aukkrit Corporation Co.,Ltd üë©üèª‚Äçüíº</h1>

            <p class="lead"><b>Welcome to my mini web application ‚ô•</b></p>

        </div>
    </div>


    <div class="container mt-3">
        <h1>List of employee</h1>
        <hr>
        <div class="row">
            <% if(foods.length === 0) { %>
            <h3 class="ml-3 mb-3">Please click to insert employee :)</h3>
            <% }else { %>
            <% foods.forEach(food => { %>
            <div class="col-lg-4 mb-4">
                <div class="card ">
                    <h5 class="card-header">Name: <%= food.title %></h5>
                    <div class="card-body">
                        <p class="card-text">Department: <%= food.detail %></p>
                        <p class="card-text">Salary: <%= food.cost %> Baht</p>
                        <div class="row justify-content-around ">
                            <form action="/foods/<%= food._id %>" method="get">
                                <button class="btn btn-md btn-success" type="submit">Update üòä </button>
                            </form>
                            <form action="/foods/delete/<%= food._id %>" method="post">
                                <button class="btn btn-md btn-danger" type="submit">Delete üò≤</button>
                            </form>


                        </div>
                    </div>


                </div>

                <%   }); }%>

            </div>

        </div>

    </div>

    <div class="container">

        <!-- <button class="btn btn-lg btn-outline-info mb-3" data-toggle="collapse" data-target="#collapseExample"
            aria-expanded="false" aria-controls="collapseInsert" type="button">
            Add new employee -->
        </button>

        <!-- <div class="collapse container" id="collapseExample"> -->
            <div class="card">
                <div class="container">
                    <h2>Add employee information.</h2>
                </div>

                <div class="card-body">
                    <form action="/foods" method="post" class="form-group">
                        <label for="" class="mt-1">Name:</label>
                        <input class="form-control" type="text" name="title" required>
                        <label for="" class="mt-1">Department:</label>
                        <input class="form-control" type="text" name="detail" required>
                        <label for="" class="mt-1">Salary: (Baht)</label>
                        <input class="form-control" type="number" name="price" min="0" required>
                        <button class=" btn btn-info" type="submit">Insert</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <footer>
        <p>Aukkrit Corp Co.,Ltd<br>
        <a href="mailto:hege@example.com">Aukkrit.corp@hotmail.com</a></p>
      </footer>

</body>

</html>